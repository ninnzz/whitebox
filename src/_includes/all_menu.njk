<div class="main_page container mx-auto">
    <div class="banner-top container w-full justify-center text-center m-auto mb-10 mt-10">
        <h3 class="text-5xl whitebox_name mb-5 w-3/4 m-auto">Menu</h3>
        <h4 class="text-sm"><i class="whitebox_name_supp  roboto100 text-yellow-600 p-5"> {{ menu_heading }}</i></h5>
        <!-- <img src="/images/main_logo.png" width="100" height="100"/> -->
    </div>
    <div class="container justify-center">
        <table class="container w-12/12 lg:md:sm:w-7/12 mx-auto roboto300">
            <thead>
                <tr><td class="w-3/4"></td><td class="w-1/4 text-center text-xs md:sm:text-sm pl-5">hot (8oz) / cold (12oz)</td></tr>
            </thead>
            <tbody>
                {% for menu_item in collections.drinks %}
                        <tr class="text-xl hover:bg-yellow-100">
                            <td class="w-3/4 mt-10 p-0 py-1.5 text-left pl-10">
                                {{ menu_item.data.name }} <br/>
                                <i class="roboto100 text-sm pl-2">{{ menu_item.data.description }}</i>
                        </td> 
                            <td class="w-3/4 text-center">{{ menu_item.data.priceHot }} / {{ menu_item.data.priceCold }}</td>
                        </tr>
                {% endfor %}
                <tr>
                    <td colspan="2" class="text-center text-base roboto100 py-10">
                        ♨ Just add 10 php to upsize your cold drinks to 16oz ♨
                    </td
                ></tr>
                <!-- <tr><td colspan="2" class="text-center text-lg">♨o(>_<)o♨</td></tr> -->
                {% for menu_item in collections.foods %}
                        <tr class="text-xl hover:bg-yellow-100">
                            <td class="w-3/4 mt-10 p-0 py-1.5 text-left pl-10">
                                {{ menu_item.data.name }} <br/>
                                <i class="roboto100 text-sm pl-2">{{ menu_item.data.description }}</i>
                            </td> 
                            <td class="w-3/4 text-center">{{ menu_item.data.priceStart }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="reachus container mt-20 content-center text-center">
        <h3 class="whitebox_name text-4xl text-center">Contact us</h3>
        <p class="container mt-5 text-sm text-gray-500 mx-auto">
            <!-- <img class="social-icon" src="/images/fb.svg" class="w-20"/> -->
            FB: <a href="https://www.facebook.com/wbcollectiveph" target="_blank" class="ml-2 mr-5 text-yellow-600 hover:bg-gray-300 roboto300">wbcollectiveph</a> 
            <!-- <img class="social-icon" src="/images/ig.svg" class="w-20"/> -->
            IG: <a href="https://www.instagram.com/wbcollectiveph/" target="_blank" class="ml-2 mr-5 text-yellow-600 hover:bg-gray-300 roboto300">wbcollectiveph</a>
